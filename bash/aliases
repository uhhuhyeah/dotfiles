alias ..="cd .."
alias reload="source ~/.bashrc"
alias ea="mvim ~/bin/dotfiles/bash/aliases && reload"

alias log="tail -f log/*.log"
alias be="bundle exec"
alias brake="bundle exec rake"
alias rprep="be rake db:test:prepare"
alias gst="git status"
alias tags="ctags -R --exclude=.git --exclude=log * ~/.rvm/gems/ruby-head/*"
alias winps="cd ~/dev/modcloth/winstotron/ && heroku ps:restart"
alias rspec="be rspec --format Fuubar"
alias rmorig="find . -iname '*.orig' | xargs rm"
alias rmog="rmorig"
alias th="top_history"

# Quick way to rebuild the Launch Services database and get rid
# of duplicates in the Open With submenu.
alias fixopenwith='/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user'

